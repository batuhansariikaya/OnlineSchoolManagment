@using OnlineExamProject.Domain.Entities
@model IEnumerable<Grade>
@{
    ViewData["Title"] = "GradeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper m-2">
    <div class="card"">
        <div id="vav" class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Kod</th>
                        <th>Sınıf</th>
                        <th>Durum</th>
                        <th>Oluşturulma Tarihi</th>                        
                        <th>Güncellenme Tarihi</th>                        
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Code</th>
                            <td><i class="fab fa-angular fa-lg texts-danger"></i> @item.Name</td>
                            <td>@item.Status</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.UpdatedDate</td>                          
                            <td>
                                <a href="/Admin/Grade/GradeUpdate/@item.Id" class="btn btn-primary btn-sm"><i class="bx bxs-edit"></i></a>                  
                                <a href="/Admin/Grade/GradeDelete/@item.Id" class="btn btn-danger btn-sm"><i class="bx bx-trash"></i></a>
                            <a href="" class=""><i class="bx bx-plus-circle"></i></a>
                            </td>                         
                         
                        </tr>                       
                    }
                </tbody>
            </table>
        </div>
        <br>
        <a href="/Admin/Grade/GradeAdd" style="width:300px" class="btn btn-primary">Sınıf Ekle</a>
    </div>
    
</div>
